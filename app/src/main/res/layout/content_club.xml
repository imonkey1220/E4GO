<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.imonkey.e4go.ClubActivity"
    tools:showIn="@layout/activity_club">

    <TextView
        android:id="@+id/textViewTakeCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="32dp"
        android:text="取號叫號"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textViewQRGMember"
        app:layout_constraintTop_toBottomOf="@+id/textViewQRGMember" />

    <TextView
        android:id="@+id/textViewFBMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:text="FB帳號會員"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLineMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:text="Line帳號會員"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/textViewFBMember"
        app:layout_constraintTop_toBottomOf="@+id/textViewFBMember" />

    <TextView
        android:id="@+id/textViewGoogleMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:text="Google帳號會員"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/textViewLineMember"
        app:layout_constraintTop_toBottomOf="@+id/textViewLineMember" />

    <TextView
        android:id="@+id/textViewQRMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QRcode帳號會員"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="268dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewGoogleMember" />

    <TextView
        android:id="@+id/textViewQRGMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="產生新會員QRcode"
        android:textSize="30sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewQRMember"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewQRMember" />

    <ImageView
        android:id="@+id/imageViewQRMember"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/places_ic_search" />
</android.support.constraint.ConstraintLayout>
